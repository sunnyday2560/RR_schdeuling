            <Ellipse Height="50" Stroke="Black" Opacity="0.3" Fill="#FF1BA1E2" Width="100"/>
            <TextBlock Height="30" TextWrapping="Wrap" Text="Run State" FontWeight="Bold" Canvas.Left="19" Canvas.Top="50" />
        </Canvas>

